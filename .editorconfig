# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
# limited editor support (VSC does not support this; enforce with linters)
max_line_length = 119

[*.{html, js, css, jinja2, json}]
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
